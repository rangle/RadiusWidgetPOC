{
  "name": "@rangle/radius-figma-sync",
  "version": "1.0.0",
  "description": "Radius Figma Synchronizer",
  "type": "module",
  "scripts": {
    "build:web": "npx vite build --minify esbuild --emptyOutDir=false",
    "build": "esbuild widget-src/code.tsx --bundle --outfile=dist/code.js --target=es6",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "tsc": "tsc --noEmit -p widget-src",
    "watch": "npm run build -- --watch",
    "test": "vitest"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "*",
    "@types/path-browserify": "^1.0.2",
    "@types/url-parse": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "*",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vite": "^5.2.6",
    "vite-plugin-singlefile": "^2.0.1",
    "vitest": "^1.4.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./widget-src/tsconfig.json",
        "./web-src/tsconfig.json"
      ]
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.1.0",
    "buffer": "^6.0.3",
    "expect": "^29.7.0",
    "path": "^0.12.7",
    "path-browserify": "^1.0.1",
    "preact": "^10.20.1",
    "url": "^0.11.3",
    "url-parse": "^1.5.10"
  }
}
